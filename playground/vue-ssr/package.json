{
  "name": "vue-ssr",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server --outDir dist/server",
    "preview": "node server-prod.js",
    "test:unit": "vitest -c ./vitest.config.ts --run",
    "test:visual": "pnpm build && playwright test",
    "test": "pnpm test:unit && pnpm test:visual"
  },
  "dependencies": {
    "koa": "^2.13.1",
    "koa-connect": "^2.1.0",
    "koa-send": "^5.0.1",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/koa": "^2.14.0",
    "@types/koa-send": "^4.1.2",
    "@vitejs/plugin-vue": "^5.0.3",
    "css-media-splitter": "workspace:*",
    "vite": "^5.0.12",
    "vitest": "^1.2.2"
  }
}
